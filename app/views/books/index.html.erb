<h1>BookSearch</h1>
<p>Here you can see a list of books</p>

<%= render 'search' %>

<div id="book-list">
  <% @books.each do |book| %>
    <% if book.image %>
      <img src="<%= book.image %>" class="thumb" />
    <% else %>
      <%= image_tag('book.png', class: 'thumb') %>
    <% end %>
    <h3><%= book.title %></h3>
    <ul>
      <li><b>Description:</b> <%= book.description %></li>
      <li><b>Author name:</b> <%= book.author_name %></li>
    </ul>
  <% end %>
</div>
